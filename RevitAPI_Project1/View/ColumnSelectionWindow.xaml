<Window x:Class="RevitAPI_Project1.ColumnSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Column Settings" Height="350" Width="350"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Text="Select Column Type:"/>
        <ComboBox Name="ColumnComboBox" Margin="0,5" Height="25"/>

        <TextBlock Text="Select Level:" Margin="0,10,0,0"/>
        <ComboBox Name="LevelComboBox" Margin="0,5" Height="25"/>

        <TextBlock Text="Offset (meters):" Margin="0,10,0,0"/>
        <TextBox Name="OffsetBox" Margin="0,5" Height="25" Text="0.0"/>

        <TextBlock Text="Rotation (degrees):" Margin="0,10,0,0"/>
        <TextBox Name="RotationBox" Margin="0,5" Height="25" Text="0.0"/>

        <Button Name="OkButton" Content="OK" Height="30" Width="80" Margin="0,10,0,0" HorizontalAlignment="Right" Click="OkButton_Click"/>
    </StackPanel>
</Window>